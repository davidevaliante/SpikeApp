<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="260dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/slotCardType"
            android:text="Slot Online"
            android:gravity="center"
            android:background="@color/redPrimary"
            android:textColor="@color/white"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/cardSlotImage"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="0dp" />
        <View
            android:background="@drawable/reverse_red_gradient"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <TextView
            android:textSize="10sp"
            android:id="@+id/cardSlotTime"
            android:text="Aggiornato il 20 mar"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/shaded_black_alpha_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cardSlotTitle"
            style="@style/Header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center|center_vertical"
            android:maxEms="16"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Blablablablabladfgdgdgdfgdfgdgdfg"
            android:textColor="@color/shaded_black_alpha_90"
            android:textSize="18sp" />

        <TextView
            android:textSize="10sp"
            android:id="@+id/cardSlotRating"
            android:text="Voto 5"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/redPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v7.widget.CardView>