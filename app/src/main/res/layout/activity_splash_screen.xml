<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkRed"
    tools:context=".splashscreen.SplashScreen">
<LinearLayout
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/splashscreenTitle"
        style="@style/Header"
        android:fontFamily="@font/font_grezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:text="Spike Slot"
        android:textColor="@color/white"
        android:textSize="58dp" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            app:srcCompat="@drawable/ic_facebook"
            android:layout_margin="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <ImageView
            app:srcCompat="@drawable/ic_instagram"
            android:layout_margin="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <ImageView
            app:srcCompat="@drawable/ic_youtube_ic_white"
            android:layout_margin="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"  />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/timeIndicator"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashscreenTitle"
        android:layout_marginTop="16dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        app:indicatorName="BallClipRotateMultipleIndicator" />
</LinearLayout>


</RelativeLayout>