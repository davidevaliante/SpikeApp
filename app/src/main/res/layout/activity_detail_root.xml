<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".detailtwo.DetailRoot"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        app:elevation="0dp"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/transparent"
        android:layout_height="400dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginBottom="54dp"
            app:collapsedTitleGravity="center"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleTextAppearance="@style/expandedappbar"
            app:collapsedTitleTextAppearance="@style/collapsedappbar"
            android:layout_gravity="center"
            app:contentScrim="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/collapsingImg"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:scaleType="centerCrop"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/collapsingImgOverlay"
                android:background="@color/shaded_black_alpha_30"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <android.support.v7.widget.Toolbar
                android:id="@+id/myToolbar"
                fontPath="font/montserrat_bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                style="@style/ToolBarStyle.Event"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Pyramid:Quest for immortality"
                app:titleTextColor="@color/white">

                <ImageView
                    android:paddingEnd="16dp"
                    android:id="@+id/backArrow"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_left_arrow" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_top_corners"
                android:layout_width="match_parent"
                android:layout_height="26dp"/>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/scrollingLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/leftSideBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mock_one"
                android:layout_marginTop="16dp"
                android:background="@color/redPrimary"
                android:visibility="gone"
                android:padding="16dp"
                android:text="mock 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mock_two"
                android:visibility="gone"
                android:background="@color/darkRed"
                android:padding="16dp"
                android:text="mock 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightGray" />

        <include layout="@layout/detail_scrollview"></include>


    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/relativeLayoutMiddleLine"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:backgroundTint="@color/darkRed"
            app:fabSize="normal"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_play_button"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_below="@id/relativeLayoutMiddleLine"
            android:layout_centerVertical="true"
            android:layout_marginTop="70dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_share"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabYoutube"
            android:layout_below="@id/fabShare"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_youtube_logo"/>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>