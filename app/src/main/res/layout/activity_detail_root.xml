<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".detailtwo.DetailRoot"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        app:elevation="0dp"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/transparent"
        android:layout_height="400dp">

        <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginBottom="54dp"
            app:collapsedTitleGravity="center"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleTextAppearance="@style/expandedappbar"
            app:collapsedTitleTextAppearance="@style/collapsedappbar"
            android:layout_gravity="center"
            app:maxLines="3"
            app:contentScrim="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/collapsingImg"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:scaleType="centerCrop"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/collapsingImgOverlay"
                android:background="@color/shaded_black_alpha_30"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <android.support.v7.widget.Toolbar
                android:id="@+id/myToolbar"
                fontPath="font/montserrat_bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                style="@style/ToolBarStyle.Event"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Pyramid"
                app:subtitle="Quest for immortality"
                app:titleTextColor="@color/white">

                <ImageView
                    android:paddingEnd="16dp"
                    android:id="@+id/backArrow"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_left_arrow" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_top_corners"
                android:layout_width="match_parent"
                android:layout_height="26dp"/>


        </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:id="@+id/scrollingLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/disclaimer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:fontFamily="@font/montserrat_italic"
            android:paddingBottom="8dp"
            android:paddingTop="0dp"
            android:text="Il gioco è vietato ai minori e può causare dipendenza patologica. Verifica la probabilità di vincita su www.aams.gov.it Gioca responsabilmente"
            android:textSize="10sp" />
        <View
            android:id="@+id/reverse_gradient"
            android:visibility="gone"
            android:background="@drawable/reverse_red_gradient"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/leftSideBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:background="@color/white"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray" />

            <include layout="@layout/detail_scrollview"></include>


        </LinearLayout>




    </LinearLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:backgroundTint="@color/darkRed"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_play_button"/>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/searchFieldGroup"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="4dp"
            android:layout_toEndOf="@id/fab"
            android:layout_alignBottom="@id/fab"
            android:layout_width="match_parent"
            android:layout_marginStart="4dp"
            android:layout_height="56dp">

            <EditText
                android:drawableRight="@drawable/ic_search"
                android:drawablePadding="16dp"
                android:id="@+id/searchFieldEditText"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:layout_weight="0.8" >

            </EditText>
            <View
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/relativeLayoutMiddleLine"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_marginTop="-26dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_share"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabYoutube"
            android:layout_marginTop="-26dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_youtube_logo"/>

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>